<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fairrepack">

    <!-- LA SUITE NOUS PERMET DE RECUP LES DATA STOCK DANS LE TEL POUR PERMETRE UN LOGIN AUTO -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- FIN LOG IN AUTO -->

    <!-- PERMISSION POUR INTERNET, SINON DIFFICILE D'UTILISER L'API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- FIN PERMISSION INTERNET-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/fairrepack"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fairrepack_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FairRepack">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>